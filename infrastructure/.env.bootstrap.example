# =============================================================================
# Matrx Server Bootstrap Configuration
# =============================================================================
# Copy this file to .env.bootstrap and fill in all values before running bootstrap.sh
# DO NOT commit this file with real values to source control.

# ── Domain ──────────────────────────────────────────────────────────────────
DOMAIN=dev.codematrx.com

# ── Traefik ─────────────────────────────────────────────────────────────────
# Generate with: echo $(htpasswd -nB admin) | sed -e s/\\$/\\$\\$/g
TRAEFIK_DASHBOARD_AUTH=admin:$$2y$$05$$...

# ── PostgreSQL (shared infrastructure DB) ────────────────────────────────────
POSTGRES_USER=matrx
POSTGRES_PASSWORD=
POSTGRES_DB=matrx

# ── pgAdmin ─────────────────────────────────────────────────────────────────
PGADMIN_EMAIL=admin@matrxserver.com
PGADMIN_PASSWORD=

# ── Server Manager ──────────────────────────────────────────────────────────
# Generate with: openssl rand -hex 32
MANAGER_BEARER_TOKEN=

# ── AWS S3 (backups & image archival) ────────────────────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BACKUP_BUCKET=matrx-server-backups-prod

# ── Source Repos ─────────────────────────────────────────────────────────────
GITHUB_REPO_URL=https://github.com/armanisadeghi/matrx-ship.git
SANDBOX_REPO_URL=https://github.com/armanisadeghi/matrx-sandbox.git
MCP_TEMPLATE_REPO_URL=https://github.com/armanisadeghi/matrx-mcp-template.git
